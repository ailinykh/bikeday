datasource db {
    url      = env("DATABASE_URL")
    provider = "mysql"
}

generator client {
    provider = "prisma-client-js"
}

model Event {
    id                 Int                  @id @default(autoincrement())
    title              String
    date               DateTime
    createdAt          DateTime             @default(now())
    updatedAt          DateTime             @updatedAt
    EventParticipation EventParticipation[]
}

model EventParticipation {
    event     Event    @relation(fields: [eventId], references: [id])
    user      User     @relation(fields: [userId], references: [id])
    eventId   Int
    userId    Int
    district  String
    bike      String
    band      String?
    bandBy    Int?
    createdAt DateTime @default(now())
    updatedAt DateTime @updatedAt

    @@unique([eventId, userId])
}

model OneTimePassword {
    id        Int      @id @default(autoincrement())
    context   String
    password  String
    provider  String
    ipAddress String
    userAgent String
    createdAt DateTime @default(now())
    updatedAt DateTime @updatedAt
}

model OneTimePasswordLog {
    id        Int      @id @default(autoincrement())
    password  String
    ipAddress String
    userAgent String
    createdAt DateTime @default(now())
    updatedAt DateTime @updatedAt
}

model User {
    id                 Int                  @id @default(autoincrement())
    status             String
    phone              String?              @unique
    telegramId         String?              @unique
    firstName          String
    lastName           String
    gender             String?
    birthday           DateTime?
    parentId           Int?
    createdAt          DateTime             @default(now())
    updatedAt          DateTime             @updatedAt
    EventParticipation EventParticipation[]
}
