model OneTimePassword {
    id        Int      @id @default(autoincrement())
    context   String
    password  String
    provider  String
    ipAddress String
    userAgent String
    createdAt DateTime @default(now())
    updatedAt DateTime @updatedAt
}

model OneTimePasswordLog {
    id        Int      @id @default(autoincrement())
    password  String
    ipAddress String
    userAgent String
    createdAt DateTime @default(now())
    updatedAt DateTime @updatedAt
}

model User {
    id                   Int                    @id @default(autoincrement())
    status               String
    phone                String?                @unique
    telegramId           String?                @unique
    firstName            String
    lastName             String
    gender               String?
    birthday             DateTime?
    parentId             Int?
    createdAt            DateTime               @default(now())
    updatedAt            DateTime               @updatedAt
    EventParticipation   EventParticipation[]
    ContestParticipation ContestParticipation[]
}
